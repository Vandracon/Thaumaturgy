{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "workbench.colorCustomizations": {
    "activityBar.background": "#03351F",
    "titleBar.activeBackground": "#800080",
    "titleBar.activeForeground": "#ECFEF6",
    "folderPathColor.custom1": "#d6ee00",
    "folderPathColor.custom2": "#ff5b32",
    "folderPathColor.custom3": "#8490ff",
    "folderPathColor.custom4": "#61dafb"
  },
  "folder-path-color.folders": [
    {
      "path": "src/Core",
      "symbol": "C",
      "tooltip": "Core Layer",
      "color": "custom1"
    },
    {
      "path": "src/Infrastructure",
      "symbol": "I",
      "tooltip": "Infrastructure Layer",
      "color": "custom2"
    },
    {
      "path": "src/Server",
      "symbol": "S",
      "tooltip": "Server/App",
      "color": "custom3"
    },
    {
      "path": "src/Server/webapp",
      "symbol": "W",
      "tooltip": "Server/WebApp",
      "color": "custom4"
    }
  ]
}
